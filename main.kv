MDScreen:
    name: "main"
    bot_name: bot_name
    MDFloatLayout:
        md_bg_color: 53/255, 56/255, 60/255, 1
        # Image:
        #     source: "Emmalex5-05.jpg"
        #     size_hint: .8, .5
        #     pos_hint: {"center_x": .5, "center_y": .8}
        MDLabel:
            text: "Welcome to the AIIJC Chatbot App"
            font_size: "25sp"
            pos_hint: {"center_x": .5, "center_y": .58}
            halign: "center"
            theme_text_color: "Custom"
            text_color: 1, 1, 1, 1
        MDLabel:
            text: "Your Digital Assistant to guide you through our Products & Services"
            size_hint_x: .9
            font_size: "18sp"
            pos_hint: {"center_x": .5, "center_y": .45}
            halign: "center"
            theme_text_color: "Custom"
            text_color: 1, 1, 1, 1
        Button:
            text: "Read Me First"
            size_hint: .4, .08
            font_size: "17sp"
            pos_hint: {"center_x": .5, "center_y": .33}
            halign: "center"
            # underline: "True"
            background_color: 0, 0, 0, 0
            color: 1, 1, 1, 1
            on_release: app.read_first()
            canvas.before:
                Color:
                    rgb: 34/255, 49/255, 63/255, 1
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [20]
        MDFloatLayout:
            size_hint: .85, .08
            pos_hint: {"center_x": .5, "center_y": .22}
            canvas: 
                Color:
                    rgb: (238/255, 238/255, 238/255, 1)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [22, 22, 22, 22]
            TextInput:
                id: bot_name
                hint_text: "Chatbot Name"
                size_hint: 1, None
                pos_hint: {"center_x": .5, "center_y": .5}
                font_size: "18sp"
                height: self.minimum_height
                multiline: False
                cursor_color: 1, 0, 0, 1
                cursor_width: "2sp"
                foreground_color: 1, 0, 0, 1
                background_color: 0, 0, 0, 0
                padding: 15
        MDFloatLayout:
            size_hint: .45, .08
            pos_hint: {"center_x": .5, "center_y": .1}
            canvas: 
                Color:
                    rgb: (1, 0, 0, 1)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [22, 22, 22, 22]
        Button:
            text: ""
            size_hint: .45, .08
            pos_hint: {"center_x": .5, "center_y": .1}
            background_color: 0, 0, 0, 0
            on_release: 
                app.bot_name()
        MDLabel:
            text: "Lets' Chat"
            halign: "center"
            pos_hint: {"center_y": .1}
            font_size: "18sp"    
            color: 1, 1, 1, 1
            icon: "chat"
            
